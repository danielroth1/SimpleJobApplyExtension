{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "npm: dev",
      "type": "shell",
      "command": "npm run dev",
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^([^\\\\s].*)\\\\((\\\\d+|\\\\d+,\\\\d+|\\\\d+,\\\\d+,\\\\d+,\\\\d+)\\\\):\\\\s+(error|warning|info)\\\\s+(TS\\\\d+)\\\\s*:\\\\s*(.*)$",
          "file": 1,
          "location": 2,
          "severity": 3,
          "code": 4,
          "message": 5
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".",
          "endsPattern": "(Local:|Network:)"
        }
      }
    },
    {
      "label": "npm: build",
      "type": "shell",
      "command": "npm run build",
      "problemMatcher": []
    },
    {
      "label": "vite:build",
      "type": "shell",
      "command": "npx",
      "args": ["vite", "build"],
      "problemMatcher": []
    },
    {
      "label": "vite:watch",
      "type": "shell",
      "command": "npx",
      "args": ["vite", "build", "--watch"],
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^([^\\\\s].*)\\\\((\\\\d+|\\\\d+,\\\\d+|\\\\d+,\\\\d+,\\\\d+,\\\\d+)\\\\):\\\\s+(error|warning|info)\\\\s+(TS\\\\d+)\\\\s*:\\\\s*(.*)$",
          "file": 1,
          "location": 2,
          "severity": 3,
          "code": 4,
          "message": 5
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".",
          "endsPattern": "(watching for file changes|âœ“ built in)"
        }
      }
    },
    {
      "label": "web-ext:run:firefox",
      "type": "shell",
      "command": "npx",
      "args": [
        "web-ext",
        "run",
        "--source-dir",
        "dist",
        "--start-url",
        "about:debugging#/runtime/this-firefox",
        "--firefox-profile",
        "${workspaceFolder}/.vscode/firefox-profile"
      ],
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^(.*)$",
          "message": 1
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".",
          "endsPattern": "(The extension will reload if any source file changes|Installed)"
        }
      }
    },
    {
      "label": "web-ext:run:chrome",
      "type": "shell",
      "command": "npx",
      "args": [
        "web-ext",
        "run",
        "--source-dir",
        "dist",
        "--target",
        "chromium"
      ],
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^(.*)$",
          "message": 1
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": ".",
          "endsPattern": "(The extension will reload if any source file changes|Installed)"
        }
      }
    }
  ]
}
