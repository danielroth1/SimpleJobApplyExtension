{
  "manifest_version": 2,
  "name": "Simple Job Apply",
  "version": "0.1.5.1",
  "browser_specific_settings": {
    "gecko": {
      "id": "simple-job-apply@mailbase.info",
      "strict_min_version": "109.0",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  },
  "description": "Analyze job postings, highlight keywords, and generate cover letters from your own paragraph blocks.",
  "icons": {
    "128": "icon.ico",
    "48": "icon.ico",
    "32": "icon.ico"
  },
  "browser_action": {
    "default_title": "Simple Job Apply",
    "default_icon": "icon.ico"
  },
  "permissions": ["storage", "activeTab", "tabs", "<all_urls>"],
  "background": {
    "scripts": ["background-ff.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"],
      "run_at": "document_idle"
    }
  ],
  "sidebar_action": {
    "default_panel": "index.html",
    "default_title": "Simple Job Apply",
    "default_icon": "icon.ico"
  },
  "optional_permissions": []
}
