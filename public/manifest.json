{
  "manifest_version": 3,
  "name": "Simple Job Apply",
  "version": "0.1.0",
  "description": "Analyze job postings, highlight keywords, and generate cover letters from your own paragraph blocks.",
  "action": {},
  "permissions": ["storage", "activeTab", "tabs", "sidePanel"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js",
    "scripts": ["background-ff.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"],
      "run_at": "document_idle"
    }
  ],
  "side_panel": {
    "default_path": "index.html"
  },
  "sidebar_action": {
    "default_panel": "index.html",
    "default_title": "Simple Job Apply"
  }
}
